@model IEnumerable<NewPizza.Models.Urun>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Ürün Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FotoAdres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kategori.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stok)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fiyat)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.FotoAdres" width="80" height="60" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kategori.Ad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stok)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fiyat)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
            @using (Html.BeginForm("FileUpload", "Admin", FormMethod.Post,
                                            new { enctype = "multipart/form-data" }))
            {
                <input type="hidden" name="id" value="@item.Id" />
                <label for="file">Ürün fotoğrafını seçin:</label>
                <input type="file" name="file" id="file" style="width: 100%;" />
                <input type="submit" value="Kaydet" class="submit" />
            }
        </td>
    </tr>
}

</table>
